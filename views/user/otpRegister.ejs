<section>
    <div class="main">
        <h4 class="mt-5">Verification</h4>
        <p>Enter your 4-digit code that you received on your email.</p>
        <div class="otp-section">
            <form action="/home" method="post">
                <div class="otps">
                    <input type="number" name="number1" id="number1" class="numb">
                    <!-- You can add similar input fields for number2, number3, and number4 if needed -->
                </div>
                <div class="timer mt-3">00:60</div> <!-- This div will display the timer -->
                <div class="button d-flex justify-content-center mt-3">
                    <input type="submit" value="Verify" class="row">
                </div>
            </form>
            <a href=""><button style="display: none;" class="vis">Resend Otp</button></a>
        </div>
    </div>
</section>
<script>
    
    // JavaScript code to handle the timer
    let timer = 60; // 60 seconds
    const timerElement = document.querySelector('.timer');

    function updateTimer() {
        timerElement.textContent = `00:${timer < 10 ? '0' : ''}${timer}`;
        if (timer === 0) {
            // Timer has reached 0, you can add your actions here
        } else {
            timer--;
            setTimeout(updateTimer, 1000); // Update timer every second
        }
    }

    updateTimer(); // Start the timer
</script>

