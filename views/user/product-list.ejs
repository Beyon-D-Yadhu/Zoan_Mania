<%- include('../layouts/user/header'); -%>

<div class="col-12">
  <!-- Carousel -->
  <div class="row">
    <div class="col-12 d-flex justify-content-center mt-4 mb-5">
      <h2>See Our Products</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <div class="filter d-flex flex-column align-items-start rounded shadow ms-3 p-3"
        style="width: 90%; position: sticky; top: 200px;">
        <div class="d-flex justify-content-center mb-4" style="width: 100%;">
          <h4>Categories</h4>
        </div>

        <% categories.forEach((category)=>{ %>
          <div class="form-check">  
            <input class="form-check-input" type="checkbox" value="<%= category.catName %>"
              id="category_<%= category._id %>" name="categories">
            <label class="form-check-label" for="category_<%= category._id %>">
              <%= category.catName %>
            </label>
          </div>
        <% }) %>

        <div class="mt-4">
          <h4>Price Range</h4>
          <div class="mb-3">
            <label for="priceRange" class="form-label">Select Price Range:</label>
            <div class="d-flex flex-column">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="priceRange" value="0-100" id="priceRange1">
                <label class="form-check-label" for="priceRange1">₹0 - ₹100</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="priceRange" value="100-500" id="priceRange2">
                <label class="form-check-label" for="priceRange2">₹100 - ₹500</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="priceRange" value="500-1000" id="priceRange3">
                <label class="form-check-label" for="priceRange3">₹500 - ₹1000</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="priceRange" value="1000-2000" id="priceRange4">
                <label class="form-check-label" for="priceRange4">₹1000 - ₹2000</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="priceRange" value="2000-5000" id="priceRange5">
                <label class="form-check-label" for="priceRange5">₹2000 - ₹5000</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="priceRange" value="5000-above" id="priceRange6">
                <label class="form-check-label" for="priceRange6">₹5000 and above</label>
              </div>
            </div>
          </div>
        </div>
        

        <div style="width: 100%;" class="d-flex justify-content-center">
          <button class="btn btn-success" onclick="applyFilters()">Apply</button>
        </div>
      </div>
    </div>

    <div class="col-md-10"> 
      <div id="productContainer" class="row">
        <% productsList.forEach(product => { %>
          <% if(product.Category.length > 0 && product.Image.length !==0 && product.visible){ %>
            <!-- Product card HTML goes here -->
            <div class="col-md-4  p-4">
              <div class="card shadow" style="width: 18rem;margin-left: 25px;">
                <% if(product.catOffer.catPer>0){ %>
                  <span class="bg-info text-white m-2 p-1"
                    style="position: absolute; top: 0px; right: 0px; z-index: 1; border-radius: 5px;">
                    <%= product.catOffer.catPer %>% off
                  </span>
                <% } %>
                <a href="/productDetail/<%= product._id %>">
                  <img class="card-img-top img-fluid"
                    style="height: 290px; width: 250px; padding: 20px; margin-left: 20px;"
                    src="/uploads/<%=product.Image[0]%>" alt="Card image cap">
                </a>
                <div class="card-body">
                  <h6 class="card-title">
                    <%=product.Name%>
                  </h6>

                  <% if(product.Stock >= 1){ %>
                    <!-- && (cartData && cartData.Items.length !== 0 ) -->
                    <p class="card-text" style="font-weight: 700;">₹<%= product.Price %>/-</p>
                    <% let isInCart=false %>
                    <% if(cartData && cartData.Items.length>0){ %>
                    <% for (let index=0; index < cartData.Items.length; index++) { %>
                      <% if(JSON.stringify(product._id) === JSON.stringify(cartData.Items[index].ProductId._id)){ %>
                        <% isInCart=true %>
                        <% break %>
                      <% } %>
                    <% } %>
                    <% } %>
                    <% if(isInCart){ %>
                      <a href="/cart" class="btn btn-warning">Go To Cart</a>
                    <% } else { %>
                      <button class="btn btn-warning" id="buton<%= product._id %>"
                        onclick="addToCart('<%= product._id %>')">Add To Cart</button>
                    <% } %>
                  <% } else if(product.Stock < 1){ %>
                    <p class="card-text" style="font-weight: 800; color: rgb(238, 101, 101);">
                      Out of stock
                    </p>
                    <a href="" class="btn btn-warning" style="pointer-events: none">Add To Cart</a>
                  <% } else { %>
                    <button class="btn btn-warning" onclick="addToCart('<%= product._id %>')">Add To Cart</button>
                  <% } %>

                  <a href="/productDetail/<%= product._id %>" class="btn btn-primary">View Details</a>
                </div>
              </div>
            </div>
          <% } %>
        <% }) %>
      </div>
    </div>
  </div>

  <div class="col-12 d-flex justify-content-center">
    <nav aria-label="Page navigation" class="m-3">
      <ul class="pagination">
        <% for(i=1;i<=pageNums;i++){ %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>">
              <%= i %>
            </a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>

  <!-- Your footer code here -->

