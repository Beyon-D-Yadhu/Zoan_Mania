<%- include('../layouts/user/header'); -%>




                          
                          
                        
<div class="col-md-12">
  <div class="row">
      <div class="col-md-5 d-flex flex-column align-items-center">
          <div class="mt-4" style="width: 350px; z-index: 1;" id="img-container">
              <img src="/uploads/<%= P_detail.Image[0] %>" class="img-fluid rounded-top" style="cursor: pointer;" alt="" height="300px" id="mainImage">
          </div>
          <div class="mt-5 d-flex justify-content-evenly" style="width: 100%; flex-wrap: wrap;">
              <% for (i = 0; i < P_detail.Image.length; i++) { %>
                  <div style="height: 100px; width: 100px; border: 0; cursor: pointer;" >
                      <img src="/uploads/<%= P_detail.Image[i] %>" height="100px" width="100px" onclick="changeMainImage(`/uploads/<%= P_detail.Image[i] %>`)" style="border-radius: 12px;" alt="">
                  </div>
              <% } %>
          </div>
      </div>
      <div class="col-md-7 Description">
                        <div class="rightinn ms-5 mt-4">
                            <h4><%= P_detail.Name %></h4>
                            <p style="font-weight: 100;"><span><%= P_detail.Suffix %></span></p>
                            <div class="rating" style="height: 30px; width: 100px; ; "><p>Rating</p></div>
                            <hr>
                            <span class="h3" style="font-weight: 300;">₹  <%= P_detail.discountedPrice %>/-</span>&nbsp;&nbsp;
                            <% if(P_detail.catOffer.catPer>0){ %>
                              <span style="text-decoration: line-through; font-weight: 100;">₹  <%= P_detail.Price %>/-</span>
                            <% } %>
                            <p class="text-success-emphasis">inclusive of all taxes</p>
                         
                            <% if( P_detail.Stock < 1 ){ %>
                              <h4 class="text-danger mt-4">Out Of Stock!!!</h4>
                            
                            <div class="Options mt-5 d-flex">
                              <a class="ms-3 btn btn-primary"><button class="btn btn-primary" style="height: 40px; width: 200px; border-radius: 20px;" disabled>Add to cart</button></a>
                              <a href="" class="ms-3"><img src="/icons/like.png" alt=""></a>
                              <a href="" class="ms-3"><img src="/icons/basket.png" alt=""></a>
                            </div>  
                            <% }else{ %>

                              <% if(name){ %>

                              <% if(check){ %>
                                <button type="button">Go to cart</button>
                              <% }else{ %>
                                <div class="Options mt-5 d-flex">
                                  <button class="btn btn-success" 
                                    onclick="addToCart('<%= P_detail._id %>')">Add To Cart</button>                                
                                </div>  
                              <% } %>

                                <% }else{ %>
                                  <div class="Options mt-5 d-flex">
                                    <button class="btn btn-success">Add To Cart</button>                                
                                  </div> 
                                <% } %>
                            <% } %> 

                            

                            <hr>
                            <h4 style="font-weight: 300;"><u>Details</u></h4>
                            <ul>
                              <li> <%= P_detail.Spec1 %> </li>
                              <li> <%= P_detail.Spec2 %> </li>
                              <li> <%= P_detail.Spec3 %> </li>
                            </ul>
                            <h4 style="font-weight: 300;"><u>Description</u></h4>
                            <p><%= P_detail.Description %></p>
                            
                        </div>

                    </div>
                </div>
                <footer class="container-fluid mt-5" style="height: 300px;background: #000;">
