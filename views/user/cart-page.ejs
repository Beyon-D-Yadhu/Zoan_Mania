<div class=" container-fluid" style="height: 100vh; width: 100%; ">
   <div class="row">
    <div class="col-md-12 d-flex flex-column align-items-center">

        <h2 class="mt-2 mb-3">My Shopping Cart</h2>
       
        <main class="border rounded d-flex flex-column align-items-center" style="width: 85%; height: 80vh; background: #fff; overflow-y: scroll;   box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
            <div class="ta" style="width: 95%; ">
                    <table class="table  mt-4 mb-4">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <!-- <th>Size</th> -->
                                <th>Quantity</th>
                                <th>Remove</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                          <% cartDetail.Items.forEach((cart)=>{ %>
                            
                             <tr>
                                <td>
                                  <img style="display: inline;" src="/uploads/<%= cart.ProductId.Image[0].mainimage %>" width="80px" alt=""><h5 style="display: inline; margin-left: 10px;"><%= cart.ProductId.Name %></h5>
                                </td>
                                <!-- <td>
                                    <div class="d-flex justify-content-center align-items-center common" style="height: 40px; width: 40px; border: 1px black solid;">
                                        Size
                                    </div>
                                </td> -->   
                                <td class="common">

                                    <div class="d-flex " style="height: 40px; width: 120px; border: 1px black solid;">


                                    
                                        <button  id="decBtn_<%= cart.ProductId._id %>"onload="disap('<%= cart.ProductId._id %>','<%= cart.ProductId.Stock %>')" onclick="updateQuandity('<%= cart.ProductId._id %>',-1)"><div class="col" style="width: 30px; height: 30px; border: 1px black solid;background-color: #000; color: #fff;">-</div></button>
                                       
                                  


                                      <div class="col d-flex justify-content-center align-items-center " style="width: 38px; height: 38px; border: 1px black solid;" id="quantity_<%= cart.ProductId._id %>"><%= cart.Quantity %></div>

                             
                                        <button  id="incBtn_<%= cart.ProductId._id%>" onclick="updateQuandity('<%= cart.ProductId._id %>',1)"><div class="col" style="width: 30px; height: 30px; border: 1px black solid; background: #f1efef;">+</div></button>
                                       
                                   
                                    
                                      </div>

                                </td>
                                <td class="common">
                                    <button class="col d-flex justify-content-center align-items-center" style="width: 40px; height: 40px; border: 1px black solid;" onclick="deleteItem('<%= cart._id %>','<%= cart.ProductId.Name %>','<%= cartDetail._id %>')">x</button>
                                    
                                  </td>
                                <td id="price<%= cart.ProductId._id %>" class="common">
                                    ₹<%= cart.Quantity * cart.ProductId.Price %>/-
                                </td>
                            </tr>
                        
                          <% }) %>

                        </tbody>
                    </table>    
                  <form style="width: 100%;" action="/buyTheProducts" method="post">

                    <div class="row d-flex justify-content-end border">
                        <!-- <div class="col-md-3 d-flex justify-content-center align-items-center" style="height: 80px;"><div style="height: 90%; width: 90%; border: 1px solid black;">divDiscount</div></div>
                        <div class="col-md-3 d-flex justify-content-center align-items-center" style="height: 80px;"><div style="height: 90%; width: 90%; border: 1px solid black;">Delivary</div></div>
                        <div class="col-md-3 d-flex justify-content-center align-items-center" style="height: 80px;"><div style="height: 90%; width: 90%; border: 1px solid black;">Subtotal</div></div> -->
                        <div id="totalPrice" class="col-md-3 d-flex justify-content-center align-items-center border" style="height: 80px;"><div style="height: 90%; width: 90%; display: flex; justify-content: center; align-items: center;">Total Price=₹<%= sum %>/-</div></div>
                    </div>
                   <div class="d-flex justify-content-end align-items-center mt-4 mb-3">
                    <!-- <p class="me-2">If you have a promocode, please enter here</p>
                    <input type="text" placeholder="Enter your promocode here" name="" id="" class="mb-4 me-2">    -->
                    <button class="btn btn-success" type="submit" style="height: 50px; width: 200px;">Buy now</button>
                   </div> 
                </form>
            </div>
        </main>
    </div>

   </div>
</div>

<script>
  //onloading

function disap(productId, Stock){
  const incElement = document.getElementById('incBtn_'+productId)
  const decElement = document.getElementById('decBtn_'+productId)
  const val = document.getElementById('quantity_'+productId).value
  console.log()
  if(val==1){
    decElement.style.display = 'none'
  }else if(val = Stock){
    incElement.style.display = 'none'
  }
  else{
    decElement.style.display = 'block'
    incElement.style.display = 'block'

  }
} 















  <!-- var qid = document.getElementById('') -->
  function updateQuandity(productId,number){
    //console.log("clicked")
    //console.log('number=',number);
    //console.log("productId=",productId);
    //console.log("cartId=",cartId);
    //console.log("cartNo=",cartNo);
    

    $.ajax({
      url:'/updateCartValue',
      method: 'POST',
      data:{
        productId,
        number,
      },
      success:(Response)=>{
        console.log("response to front end======",Response.Quantity);
        document.getElementById('quantity_'+productId).innerHTML=Response.Quantity
        if(Response.Quantity < Response.Stock && Response.Quantity > 1){

        document.getElementById('decBtn_'+productId).style.display = 'block'
        document.getElementById('incBtn_'+productId).style.display = 'block'


        }else if(Response.Quantity <= 1){
          document.getElementById('decBtn_'+productId).style.display = 'none'
        }else if(Response.Quantity >= Response.Stock){
          document.getElementById('incBtn_'+productId).style.display = 'none'
        }

        document.getElementById('totalPrice').innerHTML ="Total Price= ₹"+ Response.totalPrice+"/-"

        document.getElementById('price'+productId).innerHTML = "₹"+Response.price+"/-"

        
      }
    })
  }


